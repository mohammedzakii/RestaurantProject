@model Item


<h1>Edit</h1>

<h4>Item</h4>
<hr />


<form method="get" action="/items/SaveEdit/@Model.Id">

    <div>
        <label for="Name">Name</label>
        <input type="text" name="Name" class="form-control" value="@Model.Name" />
    </div>

    <div>
        <label for="Image">Image</label>
        <br />
        <input type="file"  name="Image" value="@Model.Image"  />
    </div>

    <div>
        <label for="Description">Description</label>
        <input type="text" name="Description" class="form-control" value="@Model.Description" />
    </div>

    <div>
        <label for="Price">Price</label>
        <input type="text" name="Price" class="form-control" value="@Model.Price" />
    </div>


    <div>
        <input type="submit" value="Update" class="btn btn-success"   style="margin-top:10px" />

    </div>
     

</form>

      <div>
        <a href="/items/index" class="btn btn-dark" style="margin-top:10px" > Back </a>
    </div>

